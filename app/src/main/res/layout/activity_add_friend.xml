<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup"
    tools:context=".AddFriendActivity">

    <EditText
        android:id="@+id/aramaKullaniciAdiEditText"
        android:layout_width="374dp"
        android:layout_height="58dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_field"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="Ara (Kullanıcı Adı ile ara)"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="10"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider4"
        android:layout_width="409dp"
        android:layout_height="12dp"
        android:layout_marginTop="56dp"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aramaKullaniciAdiEditText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewForSearch"
        android:layout_width="397dp"
        android:layout_height="477dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="57dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:onClick="searchButton"
        android:text="Bul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aramaKullaniciAdiEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>