<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup"
    tools:context=".signUpActivity">

    <TextView
        android:id="@+id/girisYapText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="50dp"
        android:text="Hesabın var mı?"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kaydolButton"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/girisYapButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="43dp"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="girisYapButton"
        android:text="Giriş Yap"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toEndOf="@+id/girisYapText"
        app:layout_constraintTop_toBottomOf="@+id/kaydolButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/instagramCloneText"
        android:layout_width="256dp"
        android:layout_height="73dp"
        android:layout_marginTop="44dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="Plan Maker"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailAdresiKayit"
        android:layout_width="335dp"
        android:layout_height="63dp"

        android:layout_marginTop="35dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Email Adresi"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instagramCloneText" />

    <EditText
        android:id="@+id/kullaniciAdiKayit"
        android:layout_width="335dp"
        android:layout_height="63dp"

        android:layout_marginTop="24dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailAdresiKayit" />

    <EditText
        android:id="@+id/sifreKayit"
        android:layout_width="335dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_field"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kullaniciAdiKayit" />

    <Button
        android:id="@+id/kaydolButton"
        android:layout_width="335dp"
        android:layout_height="65dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_field"
        android:onClick="kaydolButton"
        android:text="Kaydol"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sifreKayit" />

</androidx.constraintlayout.widget.ConstraintLayout>